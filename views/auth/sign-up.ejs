<%
// crash-proof defaults
const errorMsg = (typeof error !== "undefined" && error) ? error : null;
const formData = (typeof form !== "undefined" && form) ? form : { name: "", email: "" };
%>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign Up</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>

  <%- include("../partials/nav") %>

  <main class="container">
    <section class="card">
      <h1>Sign Up</h1>

      <% if (errorMsg) { %>
        <p class="alert"><%= errorMsg %></p>
      <% } %>

      <form class="form" action="/auth/sign-up" method="POST">
        <label>Name</label>
        <input
          type="text"
          name="name"
          value="<%= formData.name || '' %>"
          required
        />

        <label>Email</label>
        <input
          type="email"
          name="email"
          value="<%= formData.email || '' %>"
          required
        />

        <label>Password</label>
        <input type="password" name="password" required />

        <button class="btn" type="submit">Create Account</button>
      </form>

      <p class="muted">
        Already have an account? <a href="/auth/sign-in">Sign in</a>
      </p>
    </section>
  </main>

</body>
</html>










