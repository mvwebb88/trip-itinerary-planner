<!-- views/partials/nav.ejs -->
<header class="navbar">
  <div class="brand">
    <strong>Trip Itinerary Planner</strong>
    <span>Plan • Pack • Go</span>
  </div>

  <nav class="navlinks">
    <a href="/">Home</a>
    <a href="/trips">Trips</a>
  </nav>

  <div class="nav-right">
    <% if (user) { %>
      <span class="pill">Hi, <%= user.name %></span>
      <form action="/auth/sign-out" method="POST" style="margin:0;">
        <button class="btn btn-secondary" type="submit">Sign Out</button>
      </form>
    <% } else { %>
      <a class="btn btn-secondary" href="/auth/sign-in">Sign In</a>
      <a class="btn" href="/auth/sign-up">Sign Up</a>
    <% } %>
  </div>
</header>




