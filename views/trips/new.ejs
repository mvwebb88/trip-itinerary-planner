<%- include("../partials/nav") %>

<div class="container">
  <div class="card">
    <h1>New Trip</h1>

    <% if (typeof error !== "undefined" && error) { %>
      <div class="alert"><%= error %></div>
    <% } %>

    <form action="/trips" method="POST">
      <div>
        <label>Title</label>
        <input name="title" required placeholder="e.g., Weekend in NYC" />
      </div>

      <div>
        <label>Destination</label>
        <input name="destination" placeholder="e.g., New York City" />
      </div>

      <div class="row">
        <div style="flex:1;">
          <label>Start Date</label>
          <input type="date" name="startDate" />
        </div>

        <div style="flex:1;">
          <label>End Date</label>
          <input type="date" name="endDate" />
        </div>
      </div>

      <div>
        <label>Notes</label>
        <textarea name="notes" placeholder="Packing list, hotel, flight info..."></textarea>
      </div>

      <div class="row">
        <button class="btn" type="submit">Create Trip</button>
        <a class="btn btn-secondary" href="/trips">Cancel</a>
      </div>
    </form>
  </div>
</div>




