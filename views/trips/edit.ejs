<%- include("../partials/nav") %>

<div class="container">
  <div class="card">
    <h1>Edit Trip</h1>

    <% if (typeof error !== "undefined" && error) { %>
      <div class="alert"><%= error %></div>
    <% } %>

    <form action="/trips/<%= trip._id %>?_method=PUT" method="POST">
      <div>
        <label>Title</label>
        <input name="title" value="<%= trip.title %>" required />
      </div>

      <div>
        <label>Destination</label>
        <input name="destination" value="<%= trip.destination || '' %>" />
      </div>

      <div class="row">
        <div style="flex:1;">
          <label>Start Date</label>
          <input type="date" name="startDate" value="<%= trip.startDate ? trip.startDate.toISOString().slice(0,10) : '' %>" />
        </div>

        <div style="flex:1;">
          <label>End Date</label>
          <input type="date" name="endDate" value="<%= trip.endDate ? trip.endDate.toISOString().slice(0,10) : '' %>" />
        </div>
      </div>

      <div>
        <label>Notes</label>
        <textarea name="notes"><%= trip.notes || "" %></textarea>
      </div>

      <div class="row">
        <button class="btn" type="submit">Save Changes</button>
        <a class="btn btn-secondary" href="/trips/<%= trip._id %>">Cancel</a>
      </div>
    </form>
  </div>
</div>




