<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Trips</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>

  <body>
    <div class="container">
      <%- include("../partials/nav") %>

      <div class="hero">
        <h1>Your Trips</h1>
        <p>All your saved trips â€” organized and private to your account.</p>
        <div class="actions">
          <a class="btn primary" href="/trips/new">+ New Trip</a>
        </div>
      </div>

      <div class="card">
        <h2>Trip List</h2>

        <% if (!trips.length) { %>
          <p class="muted">No trips yet. Create your first trip!</p>
        <% } %>

        <% trips.forEach(trip => { %>
          <div class="trip-row" style="margin-top: 10px;">
            <div>
              <a href="/trips/<%= trip._id %>">
                <%= trip.title || "Untitled Trip" %>
              </a>
              <div>
                <small><%= trip.destination || "No destination yet" %></small>
              </div>
            </div>

            <div style="display:flex; gap:8px;">
              <a class="btn" href="/trips/<%= trip._id %>/edit">Edit</a>

              <form action="/trips/<%= trip._id %>?_method=DELETE" method="POST">
                <button class="btn danger" type="submit">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>

        <div class="footer-links">
          <a href="/">Back Home</a>
        </div>
      </div>
    </div>
  </body>
</html>





